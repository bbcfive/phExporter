{
  "manifest_version": 3,
  "name": "Product Hunt Exporter",
  "version": "1.0",
  "description": "Export Product Hunt data with multi-language support",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.producthunt.com/*"],
      "js": ["content.js"]
    }
  ]
}